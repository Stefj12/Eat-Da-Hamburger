<h1>EAT-Da-Burger !</h1>

<div class="col" id="burger-gif">
  <img src="assets/img/burger.gif" class="text-center" id="gif">
</div>


<div class='inline w-100 justify-center align-center'>
  <div class='w-50 flex justify-center align-center padding'>
    <h2>Burgers that are devoured!</h2>


    <ul>
      {{#each burgers}}
      {{#unless devoured}}
      {{> burgers/burger-block devoured=false}}

      {{/unless}}
      {{/each}}
    </ul>


    <ul class="">
      {{#each burgers}}
      {{#if devoured}}
      {{> burgers/burger-block devoured=true}}
      {{/if}}
      {{/each}}
    </ul>

    <h2>Add a Burger</h2>
    <form class="create-form add-burger padding-right">

      <div class="form-group">
        <label for="ca">Burger Name:</label>
        <input type="text" id="ca" name="name">
      </div>


      <button type="submit">Add Burger</button>
    </form>
    <div class='w-50 justify-center align-center flex'>
      <h2>Burgers that have been devoured!</h2>
      <ul class="">
      </ul>
    </div>